{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "preserveConstEnums": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": ["src"]
}
